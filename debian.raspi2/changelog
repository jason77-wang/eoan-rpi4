    - [Config] VFIO=m
    - [Config] VFIO_MDEV=m
    - [Config] VIDEO_ASPEED=m
    - [Config] VIDEO_CADENCE_CSI2RX=m
    - [Config] VIDEO_CADENCE_CSI2TX=m
