    - [Config] USB_MV_UDC=m
    - [Config] USB_NET2272=m
    - [Config] USB_NET_AQC111=m
    - [Config] USB_NET_DRIVERS=m
    - [Config] USB_PXA27X=m
    - [Config] USB_R8A66597=m
    - [Config] USB_SL811_CS=m
    - [Config] USB_STORAGE=m
    - [Config] USB_ZERO=m
